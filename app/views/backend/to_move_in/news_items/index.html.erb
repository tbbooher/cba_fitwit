<h1>Listing news_items</h1>

<table>
  <tr>
    <th>Item text</th>
    <th>Display</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @news_items.each do |news_item| %>
  <tr>
    <td><%= news_item.item_text %></td>
    <td><%= news_item.display %></td>
    <td><%= link_to 'Show', news_item %></td>
    <td><%= link_to 'Edit', edit_news_item_path(news_item) %></td>
    <td><%= link_to 'Destroy', news_item, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

